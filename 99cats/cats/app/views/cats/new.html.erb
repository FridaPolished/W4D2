<form action="<%= cats_url %>" method="post">


    <label>Name:
        <input type="text" name="cat[name]" value="<%= @cat.name %>"/>
    </label>
    <br>
    <label>Birth_date:
        <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>"/>
    </label>
    <br>
    <label>Color:
    <select name='cat[color]'>
    <option disabled selected>-- Please Select --</option>
    <%Cat::COLORS.each do |color| %>
    <option><%=color%></option> 

    <%end%>



    </select>
             
    </label>
    <br>
    <label>Sex:
        <input type="radio" name="cat[sex]" value="<%= @cat.sex %>"/>
    </label>
    
    <label>Description:
        <input type="text" name="cat[description]" value="<%= @cat.description%>"/>
    </label>
    <br>
   
    <br>
    <input type="submit" value="Create new cat"/>
</form>